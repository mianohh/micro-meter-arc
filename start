#!/bin/bash

set -e

echo "âš¡ Micro-Meter Setup & Start Script"
echo "===================================="
echo ""

# Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

# Check if .env exists in backend
if [ ! -f "backend/.env" ]; then
    echo -e "${YELLOW}âš ï¸  No .env file found in backend/${NC}"
    echo "Creating from template..."
    cp backend/.env.example backend/.env
    echo -e "${RED}âŒ Please edit backend/.env with your keys:${NC}"
    echo "   - PRIVATE_KEY"
    echo "   - GEMINI_API_KEY"
    echo "   - PROVIDER_ADDRESS"
    echo ""
    echo "Then run ./start again"
    exit 1
fi

# Check if .env.local exists in frontend
if [ ! -f "frontend/.env.local" ]; then
    echo -e "${YELLOW}âš ï¸  No .env.local file found in frontend/${NC}"
    echo "Creating template..."
    echo "NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_project_id_here" > frontend/.env.local
    echo -e "${RED}âŒ Please edit frontend/.env.local with your WalletConnect Project ID${NC}"
    echo "   Get it from: https://cloud.walletconnect.com"
    echo ""
    echo "Then run ./start again"
    exit 1
fi

# Check for Python
if ! command -v python3 &> /dev/null; then
    echo -e "${RED}âŒ Python 3 is not installed${NC}"
    exit 1
fi

# Check for Node.js
if ! command -v node &> /dev/null; then
    echo -e "${RED}âŒ Node.js is not installed${NC}"
    exit 1
fi

echo -e "${GREEN}âœ“ Environment files found${NC}"
echo ""

# Setup Backend
echo "ðŸ“¦ Setting up Backend..."
cd backend

if [ ! -d "node_modules" ]; then
    echo "Installing Node.js dependencies..."
    npm install
fi

if [ ! -d "venv" ]; then
    echo "Creating Python virtual environment..."
    python3 -m venv venv
fi

echo "Installing Python dependencies..."
source venv/bin/activate
pip install -q -r requirements.txt

cd ..
echo -e "${GREEN}âœ“ Backend setup complete${NC}"
echo ""

# Setup Frontend
echo "ðŸ“¦ Setting up Frontend..."
cd frontend

if [ ! -d "node_modules" ]; then
    echo "Installing dependencies..."
    npm install
fi

cd ..
echo -e "${GREEN}âœ“ Frontend setup complete${NC}"
echo ""

# Cleanup function
cleanup() {
    echo ""
    echo "ðŸ›‘ Shutting down services..."
    kill $PROVIDER_PID 2>/dev/null
    kill $FRONTEND_PID 2>/dev/null
    wait $PROVIDER_PID 2>/dev/null
    wait $FRONTEND_PID 2>/dev/null
    echo -e "${GREEN}âœ… All services stopped${NC}"
    exit 0
}

trap cleanup SIGINT SIGTERM

# Start services
echo "ðŸš€ Starting services..."
echo ""

# Start Provider Node
echo "Starting Provider Node..."
cd backend
source venv/bin/activate
python provider_node.py &
PROVIDER_PID=$!
cd ..
echo -e "${GREEN}âœ“ Provider Node started (PID: $PROVIDER_PID)${NC}"

# Start Frontend
echo "Starting Frontend..."
cd frontend
npm run dev &
FRONTEND_PID=$!
cd ..
echo -e "${GREEN}âœ“ Frontend started (PID: $FRONTEND_PID)${NC}"

echo ""
echo "===================================="
echo -e "${GREEN}âœ… All services started!${NC}"
echo ""
echo "ðŸ“Š Access points:"
echo "   Frontend: http://localhost:3000"
echo ""
echo "ðŸ›‘ Press Ctrl+C to stop all services"
echo "===================================="
echo ""

# Wait for both processes
wait $PROVIDER_PID $FRONTEND_PID
